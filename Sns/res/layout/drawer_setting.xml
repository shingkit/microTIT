<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/BLUE_TIT"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_setting_fragment_behind"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">
    
     <ImageView 
        android:contentDescription="@string/head"
        android:id="@+id/iv_setting"
        android:src="@drawable/ic_settings_white_36dp"
        android:clickable="true"
        android:layout_height="36dp"
        android:layout_width="36dp"/>
    <TextView 
        android:id="@+id/tv_personinfo_nickname"
        android:layout_toRightOf="@+id/iv_setting"
        android:layout_toEndOf="@+id/iv_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_centerVertical="true" />
	
</RelativeLayout>
