<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.gyxy.sns"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
     

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <com.gyxy.sns.ui.widget.BezelImageView
            android:id="@+id/biv_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
                    android:scaleType="centerCrop"
            android:src="@drawable/person_image_empty"
            app:maskDrawable="@drawable/circle_mask" />

        <ImageView
            android:id="@+id/iv_vip"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/biv_head"
            android:layout_alignEnd="@id/biv_head"
            android:layout_alignRight="@id/biv_head"
            android:src="@drawable/avatar_vip"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/biv_head"
            android:src="@drawable/ic_person_white_18dp" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_sex"
            android:layout_toRightOf="@id/iv_sex"
            android:text="用户名"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_vip_info"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@android:color/white"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_18dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_18dp"
            android:gravity="center_vertical"
            android:text="点击进行实名认证" />

        <TextView
            android:id="@+id/tv_stuId"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@android:color/white"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_18dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_18dp"
            android:gravity="center_vertical"
            android:text="学号：" />

        <TextView
            android:id="@+id/tv_role"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@android:color/white"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_18dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_18dp"
            android:gravity="center_vertical"
            android:text="账号权限：普通会员" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@android:color/white"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_18dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_18dp"
            android:gravity="center_vertical"
            android:text="E-mail:" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@android:color/white"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_18dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_18dp"
            android:gravity="center_vertical"
            android:text="手机号:" />
    </LinearLayout>

</LinearLayout>